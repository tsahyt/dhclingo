#!/bin/bash

show_help() {
cat << EOF
Usage: ${0##*/} [-h] -f <heuristic> -i <instance> -- <clingo options> ...
Run hclingo with a declarative heuristic.

    -h              display this help and exit
    -f HEURISTIC    path to the declarative heuristic
    -i INSTANCE     path to instance
EOF
}

# process command line arguments
IFILE=None
HFILE=None

OPTIND=1
while getopts hf:i: opt; do
    case $opt in
        h)
            show_help
            exit 0
            ;;
        f)
            HFILE=$OPTARG
            ;;
        i)
            IFILE=$OPTARG
            ;;
    esac
done
shift "$((OPTIND-1))"

# run hclingo
env IFILE=$IFILE HFILE=$HFILE hclingo dhclingo.lp $IFILE $@
echo $@
